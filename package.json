{
  "name": "leetcode-ghost-window",
  "version": "1.4.2",
  "description": "An invisible window for LeetCode problem solving that stays hidden from recording/streaming applications",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron main.js",
    "dev": "electron main.js",
    "wsl": "./wsl-launcher.sh",
    "postinstall": "electron-builder install-app-deps && npm install ffi-napi ref-napi --no-save",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win --publish always",
    "dist:mac": "electron-builder --mac --publish always",
    "dist:linux": "electron-builder --linux --publish always",
    "dist:all": "electron-builder -mwl --publish always",
    "release": "node scripts/release.js",
    "release:patch": "node scripts/release.js patch",
    "release:minor": "node scripts/release.js minor",
    "release:major": "node scripts/release.js major",
    "release:check": "node scripts/check-release.js",
    "cli:dev": "cd cli && npm run dev",
    "cli:build": "cd cli && npm run build",
    "cli:publish": "cd cli && npm publish"
  },
  "workspaces": [
    "cli"
  ],
  "keywords": [
    "leetcode",
    "ghost",
    "window",
    "invisible",
    "obs",
    "screen-capture",
    "streaming"
  ],
  "author": "LeetCode Ghost Window Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^33.4.9",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "dmg-builder": "^24.13.3",
    "dotenv": "^16.5.0",
    "electron-store": "^8.1.0",
    "openai": "^4.94.0",
    "xprop": "^0.0.0"
  },
  "optionalDependencies": {
    "ffi-napi": "^4.0.3",
    "ref-napi": "^3.0.3"
  },
  "packageManager": "pnpm@10.8.0+sha512.0e82714d1b5b43c74610193cb20734897c1d00de89d0e18420aebc5977fa13d780a9cb05734624e81ebd81cc876cd464794850641c48b9544326b5622ca29971",
  "build": {
    "appId": "com.lecttcode.ghostwindow",
    "productName": "LeetCode Ghost Window",
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!cli/**"
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/ffi-napi/**/*",
      "node_modules/ref-napi/**/*"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Development"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/images/icon.png"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.developer-tools",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "LeetCode Ghost Window"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  }
}
